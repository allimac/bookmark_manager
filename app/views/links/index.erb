<h1> Links </h1>

<p class="message"> <%= flash[:message] %> </p>

<form action='/links/new' method='get'>
  <input type='submit' value='Add link'>
</form>

<ul id="links">
  <% @links.each do |link| %>
  <li>
    Title: <%= link.title %>
    URL: <%= link.url %>
    tags: <%= link.tags.map(&:name).join(", ") %>
  </li>
  <% end %>
</ul>
