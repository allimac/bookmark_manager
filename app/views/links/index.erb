<header>
  <%= partial(:'./partials/user') %>
  <form id="addLinkBtn" action='/links/new' method='get'>
    <input type='submit' value='Add link'>
  </form>
</header>

<section>
  <section class="message">
    <%= partial(:'./partials/message') %>
  </section>
  <h1> Links </h1>
  <ul id="links">
    <% @links.each do |link| %>
    <li>
      Title: <%= link.title %>
      URL: <%= link.url %>
      tags: <%= link.tags.map(&:name).join(", ") %>
    </li>
    <% end %>
  </ul>
</section>
