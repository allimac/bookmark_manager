<% if flash[:message] %>
  <% if flash[:message] == :welcome %>
    Welcome <%= @user.email %>!
  <% elsif flash[:message] == :welcome_back %>
    Welcome back <%= @user.email %>!
  <% elsif flash[:message] == :goodbye %>
    Goodbye!
  <% elsif flash[:message] == :link_added %>
    Link succesfully added!
  <% elsif flash[:message] == :no_such_email %>
    A user with that email doesn't exists
  <% end %>
<% end %>
